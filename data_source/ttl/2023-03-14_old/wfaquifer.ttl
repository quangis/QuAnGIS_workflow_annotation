# @Author(s): Eric Top
@prefix data: <https://github.com/quangis/cct/blob/master/tools/data.ttl#> .
@prefix dbo: <https://dbpedia.org/ontology/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix repo: <https://example.com/#> .
@prefix tools: <https://github.com/quangis/cct/blob/master/tools/tools.ttl#> .
@prefix wf: <http://geographicknowledge.de/vocab/Workflow.rdf#> .

repo:wfcrime_route a wf:Workflow ;
    wf:edge data:wfcrime_route_n10,
        data:wfcrime_route_n13,
        data:wfcrime_route_n16,
        data:wfcrime_route_n2 ;
    dct:subject "Subject" ;
    rdfs:comment "Question" ;
    dbo:abstract "Abstract" .

data:wfcrime_route_aquifer rdfs:comment "Principal aquifers in the USA" .

data:wfcrime_route_irrigation rdfs:comment "Counties of the United States with area of irrigated land by acreage and percent." .

data:wfcrime_route_n10 wf:applicationOf tools:SelectLayerByLocation ;
    wf:input1 data:wfcrime_route_urban_areas_aquifer ;
    wf:input2 data:wfcrime_route_precipitation ;
    wf:output data:wfcrime_route_urban_areas_aquifer_precipitation ;
    rdfs:comment "Select areas with low precipitation" .

data:wfcrime_route_n13 wf:applicationOf tools:SelectLayerByLocation ;
    wf:input1 data:wfcrime_route_urban_areas_aquifer_precipitation ;
    wf:input2 data:wfcrime_route_irrigation ;
    wf:output data:wfcrime_route_urban_areas_aquifer_precipitation_irrigation ;
    rdfs:comment "Select areas with high irrigation" .

data:wfcrime_route_n16 wf:applicationOf tools:FeatureClassToFeatureClass ;
    wf:input1 data:wfcrime_route_urban_areas_aquifer_precipitation_irrigation ;
    wf:output data:wfcrime_route_urban_areas_at_risk ;
    rdfs:comment "Copy selection to stand-alone layer" .

data:wfcrime_route_n2 wf:applicationOf tools:SelectLayerByLocation ;
    wf:input1 data:wfcrime_route_urban_areas ;
    wf:input2 data:wfcrime_route_aquifer ;
    wf:output data:wfcrime_route_urban_areas_aquifer ;
    rdfs:comment "Add a field for area sizes",
        "Select urban areas within 150 miles (geodesic) of the aquifer" .

data:wfcrime_route_precipitation rdfs:comment """polygons of average annual precipitation in the contiguous United States, for the climatological period 1990-2009.
""" .

data:wfcrime_route_urban_areas rdfs:comment """U.S. Census Urban Areas provides information about the locations, names, population, and codes of urban areas primarily for national planning applications.
""" .

